<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 基础计算器按钮样式 -->
    <style name="CalculatorButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <!-- 数字按钮样式 -->
    <style name="CalculatorButton.Number">
        <item name="backgroundTint">#FFFFFF</item>
        <item name="android:textColor">#212121</item>
        <item name="rippleColor">#E0E0E0</item>
    </style>

    <!-- 运算符按钮样式 -->
    <style name="CalculatorButton.Operator">
        <item name="backgroundTint">#E1F5FE</item>
        <item name="android:textColor">#0277BD</item>
        <item name="rippleColor">#B3E5FC</item>
    </style>

    <!-- 功能按钮样式 -->
    <style name="CalculatorButton.Function">
        <item name="backgroundTint">#F5F5F5</item>
        <item name="android:textColor">#757575</item>
        <item name="rippleColor">#E0E0E0</item>
    </style>

    <!-- 等号按钮样式 -->
    <style name="CalculatorButton.Equals">
        <item name="backgroundTint">#0277BD</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="rippleColor">#01579B</item>
    </style>
</resources>